{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "isolatedModules": true,
    "preserveValueImports": true,
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist"
  },
  "compileOnSave": true,
  "include": [
    "./src/index.ts"
  ]
}
